<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#92C5ED"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ex018"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Pokedex Application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:gravity="center"
        android:text="This application pokemon application \npokemon application pokemon \napplication pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_getting"
        android:background="@drawable/custom_button_getting"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:text="Getting Started"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>